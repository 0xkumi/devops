pipeline {
    agent {label 'docker && ansible'}
    stages {	
        stage('Build incognito') {
            steps {
                echo $params
                build(job: "Build_IncognitoTestnet", wait: true, parameters: [string(name: 'tag', value:"${params.tag}")] )
            }
        }
        stage('Deploy incognito') {
            steps {
                build(job: "Deploy_IncognitoTestnet", wait: true, parameters: [string(name: 'clear', value:"${params.clear}"), string(name: 'nodes', value:"${params.nodes}")] )
            }
        }
    }
}