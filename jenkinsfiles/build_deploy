pipeline {
    agent {
        docker { 
			image 'golang:1.12.7-stretch' 
			args "-e GOCACHE=off"
		}
    }
    stages {
        stage('Checkout') {
            steps {
                echo "Checkout version ${params.tag}"
                checkout([
                        $class: 'GitSCM',
                        branches: [[name: "refs/tags/${params.tag}"]],
                        doGenerateSubmoduleConfigurations: false,
                        extensions: [],
                        submoduleCfg: [],
                        userRemoteConfigs: [[url: 'https://github.com/incognitochain/incognito-chain']]
                ])
            }
        }
        stage('Build') {
            steps {
                echo "Prepare to build ..."
				sh "env CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -ldflags '-w' -o incognito ../*.go"
				sh "env CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -ldflags '-w' -o bootnode ../bootnode/*.go"
            }
        }
    }
}