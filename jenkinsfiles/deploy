pipeline {
    agent {label 'ansible'}
    stages {
        stage('Checkout') {
            steps {
                echo "Checkout"
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: "*/master"]],
                    doGenerateSubmoduleConfigurations: false,
                    extensions: [],
                    submoduleCfg: [],
                    userRemoteConfigs: [[credentialsId: 'github', url: 'https://github.com/0xkumi/constant_deploy.git']]
                ])
            }
        }	
        stage('Pull docker image') {
            steps {
                sh "ansible-playbook Ansible/docker.yml -i Ansible/inventories/deploy --limit deploy"
            }
        }
        
    }
}