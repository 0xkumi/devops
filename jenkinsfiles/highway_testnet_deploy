pipeline {
    agent {label 'ansible'}
    stages {
        stage('Checkout Deploy Config') {
            steps {
                echo "Checkout"
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: "*/master"]],
                    doGenerateSubmoduleConfigurations: false,
                    extensions: [],
                    submoduleCfg: [],
                    userRemoteConfigs: [[credentialsId: 'github', url: 'https://github.com/0xkumi/constant_deploy.git']]
                ])
            }
        }	
        stage('Run nodes') {
            steps {
                sh "ansible-playbook Ansible/deployBootNode.yml -i Ansible/inventories/deploy --extra-vars \"tag=${params.tag}\"  --limit highway"
            }
        }
        
    }
}
